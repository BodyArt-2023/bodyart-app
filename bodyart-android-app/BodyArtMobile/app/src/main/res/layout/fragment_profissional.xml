<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FragmentProfissional">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_primary">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@mipmap/tattooer" />




        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/background"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-50dp"
            android:background="@drawable/round_image"
            android:scaleType="fitXY"
            android:src="@mipmap/homitatoo" />

        <TextView
            android:id="@+id/nome_profissional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/nome_profissional"
            android:textColor="@color/white_smoke"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_avaliacao"
            android:layout_below="@+id/nome_profissional">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">
                <TextView
                    android:id="@+id/avaliacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/avaliacao"
                    android:textColor="@color/white_smoke"
                    android:textSize="40sp" />


                <TextView
                    android:id="@+id/txt_avaliacoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/avaliacao"
                    android:layout_alignStart="@+id/avaliacao"
                    android:text="@string/nome_servico"
                    android:textColor="@color/white_smoke"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <Button
                    android:id="@+id/separador"
                    android:layout_width="2dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white_smoke"
                    android:clickable="false" />

                <TextView
                    android:id="@+id/atendimentos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="70dp"
                    android:text="@string/atendimentos_qtd"
                    android:textColor="@color/white_smoke"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/txt_atendimentos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/atendimentos"
                    android:layout_alignStart="@+id/atendimentos"
                    android:text="@string/atendimentos"
                    android:textColor="@color/white_smoke"
                    android:textSize="15sp" />
            </RelativeLayout>


        </LinearLayout>
    </RelativeLayout>

</FrameLayout>