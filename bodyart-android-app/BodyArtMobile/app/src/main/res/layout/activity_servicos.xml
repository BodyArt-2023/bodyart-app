<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Servicos">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="@mipmap/services"
            android:padding="30dp"
            android:id="@+id/ll_header_services">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:textColor="@color/african_violet"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_servicos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_back"
                android:layout_marginTop="40dp"
                android:text="@string/tv_servicos"
                android:textColor="@color/white_smoke"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/sv_services"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_header_services"
            android:layout_centerVertical="true">

            <LinearLayout
                android:id="@+id/ll_sv_navbar_services"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="@string/tv_categoria"
                    android:textColor="@color/white_smoke"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:id="@+id/hsv_service"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_below="@id/tv_title_service">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/ll_service"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:background="@color/black_secondary"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/ll_agrup_service"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/et_img_service2"
                                    android:layout_width="300dp"
                                    android:layout_height="150dp"
                                    android:background="@color/african_violet" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/et_description_service2"
                                        android:layout_width="150dp"
                                        android:layout_height="match_parent"
                                        android:layout_margin="10dp"
                                        android:text="@string/et_description"
                                        android:textColor="@color/white_smoke"
                                        android:textSize="16sp" />

                                    <Button
                                        android:id="@+id/btn_open_service2"
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="30dp"
                                        android:backgroundTint="@color/lapis_lazuli"
                                        android:text="@string/btn_open"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/et_classification_service2"
                                        android:layout_width="50dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="15dp"
                                        android:text="@string/et_nota"
                                        android:textColor="@color/white_smoke"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="30dp"
                                        android:src="@mipmap/star" />

                                    <Button
                                        android:id="@+id/btn_see_more2"
                                        android:layout_width="200dp"
                                        android:layout_height="wrap_content"
                                        android:backgroundTint="@color/transparent"
                                        android:text="@string/btn_see_more"
                                        android:textColor="@color/gray_dark"
                                        android:textSize="16sp" />

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_ver_mais"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_margin="20dp"
                            android:background="@color/black_secondary"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="110dp"
                                android:layout_marginBottom="110dp"
                                android:text="@string/tv_ver_todos"
                                android:textAlignment="center"
                                android:textColor="@color/white_smoke"
                                android:textSize="32sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>


                </HorizontalScrollView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>