<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fl_categoria"
    tools:context=".FragmentCardEstabelecimento">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/black_secondary"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_agrup_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_img_estabelecimento"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@mipmap/fotoestabelecimentodefault" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nome"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:text="@string/tv_nome"
                    android:textColor="@color/white_smoke"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btn_open_service2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/lapis_lazuli"
                    android:text="@string/btn_open"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nota"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="@string/tv_nota"
                    android:textColor="@color/white_smoke"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="30dp"
                    android:src="@mipmap/star" />

                <Button
                    android:id="@+id/btn_see_more2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:text="@string/btn_see_more"
                    android:textColor="@color/gray_dark"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>